		 <property name="reviewLike" value="review_like"/>
		 <property name="reviewUnlike" value="review_unlike"/>		 
		 <property name="reviewRating" value="review_rating"/>		 
		 <property name="productNo" value="product_no"/>
		 <property name="customerId" value="customer_id"/>
		 
		 <property name="category" value="category"/>		
		 <property name="categoryCode" value="category_code"/>		 
		 <property name="categoryNo" value="category_no"/>			 		 
			
		 
		 <property name="cart" value="cart"/>	 		 
		 <property name="cartNo" value="cart_no"/>	 		 
		 <property name="customerId" value="customer_id"/>	 		 
		 <property name="cartImage" value="cart_image"/>	 		 
		 <property name="cartName" value="cart_name"/>	 		  		 
		 <property name="cartPrice" value="cart_price"/>	 		 
		 <property name="cartAmount" value="cart_amount"/>	 		 
		 <property name="cartTotalprice" value="cart_totalprice"/>	 		 
